@{
    ViewData["Title"] = "Campaigns";
}

<div class="row mb-5">
    <div class="col-md-8 col-12">
        <h1>Campaigns</h1>
    </div>
    <div class="col-md-4 col-12">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <span class="fa fa-fw fa-filter"></span>
                </span>
            </div>
            <input name="query" data-target-class="search-item" type="text" value="" class="form-control live-search-class-visible" placeholder="Filter List...">
            <div class="input-group-append">
                <button class="btn btn-primary clear-live-search-class" type="button" data-target-input="query">
                    <span class="fa fa-fw fa-times"></span>
                </button>
            </div>
        </div>
        <p class="text-left text-muted mt-1 mb-0">
            <span id="query-visible">1</span>
            /
            <span id="query-total">1</span>
            currently visible
        </p>
    </div>
</div>

<div class="row">
    <div class="col-12 mt-3 search-item visible">
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="flaticon2-layers-2"></i>
                    </span>
                    <h3 class="kt-portlet__head-title text-primary">
                        Campain Name
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-group">
                        <button type="button" class="btn btn-sm btn-outline-brand btn-elevate btn-circle btn-icon"><i class="la la-pencil"></i></button>&nbsp;
                        <a href="@Url.Action("Index", "Campaigns", new {id = "1"})" class="btn btn-sm btn-outline-danger btn-elevate btn-circle btn-icon">
                            <i class="la la-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div class="kt-section">
                    <div class="kt-section__info">
                        <div class="row">
                            <div class="col-4">
                                <p><strong>Sponsors:</strong> Kacie Campbell</p>
                                <p><strong>Coordinators:</strong> Candace Todd</p>
                                <p>Description and campaign and it's associated data...</p>
                            </div>
                            <div class="col-8">
                                <h4>30 Days Left</h4>
                                <div class="kt-widget-13__progress">
                                    <div class="float-container">
                                        <div class="float-left">01/01/2020</div>
                                        <div class="float-right">06/15/2020</div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__foot py-2 px-4">
                <div class="row">
                    <div class="col-12 text-right">
                        <em>Web, Print, TV/Radio, Email</em>
                    </div>
                </div>
            </div>
        </div><!-- /portlet-->
    </div><!-- /col-->
</div><!-- /row-->